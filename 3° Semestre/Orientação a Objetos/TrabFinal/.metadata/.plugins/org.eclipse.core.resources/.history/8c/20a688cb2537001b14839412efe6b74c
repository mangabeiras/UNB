package DAO;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.ArrayList;

import conector.Conexao;
import dados.Pessoa;

public class grupoDAO {
	private Connection con = Conexao.getConnection();
	
	public ArrayList<Pessoa> getGrupo() {
		ArrayList<Pessoa> grupo = new ArrayList<>();
		
		try {
			PreparedStatement preparador = con.prepareStatement("SELECT * FROM PESSOA");
			ResultSet resultado = preparador.executeQuery();
			while(resultado.next()) {
				grupo.add(new Pessoa(resultado.getString("nome"), resultado.getString("saude").charAt(0)));
			}
				
			preparador.execute();
			preparador.close();
		} catch (SQLException e) {
			e.printStackTrace();
		}
		finally {
			if (con != null) {
				try {
					con.close();
				} catch (SQLException e) {
					System.out.print("Falha ao fechar a conexão.");
					System.out.println("Causa: " + e.getMessage());
				}
			}
		}
		return grupo;
		
	}
}
